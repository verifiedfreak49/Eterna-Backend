
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Order {
  id            String   @id @default(uuid())
  tokenIn       String
  tokenOut      String
  amountIn      String   // Using String to handle large numbers/precision
  dexUsed       String?
  executedPrice String?
  txHash        String?
  status        String
  // store JSON as a string in SQLite
  statusHistory String   @default("[]") 
  failureReason String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}


